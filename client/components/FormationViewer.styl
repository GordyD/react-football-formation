.FormationViewer-Container
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-around
  margin 5vh 5vw
  height 90vh
  width 90vw
  
  .FormationViewer-Formation
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content flex-start
    background-color green
    opacity 1
    width 40%
    height 80%
    box-sizing border-box
    border solid 2px white
  
  .FormationViewer-Selection
    background-color #c5c5c5
    opacity 0.8
    width 30%
    height 80%
    
    h2
      margin 10px
    
    p 
      text-align center
      margin-bottom 10px
    
    ul 
      list-style-type none
      margin 0 10px
      height: 80%
      li
        margin-bottom 10px
        
    .FormationViewer-Options
      height 20%
      text-align center
      
      button
        margin 1vh 1vw
      